<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Itinerary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:id="@+id/relativeview">

        <androidx.viewpager.widget.ViewPager
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewpager3">
        </androidx.viewpager.widget.ViewPager>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/relativeview"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relative3"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textInitery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Itinerary Of Tour"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000"
        android:textStyle="bold"
        />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInitery"
            android:textSize="20dp"
            android:id="@+id/textday1"
            android:textColor="#FF9E80"
            android:textStyle="normal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Day 1 Welcome Tour">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textday1"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:id="@+id/textdaytext"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:text="We will see places around this beautiful place."
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textdaytext"
            android:textSize="20dp"
            android:id="@+id/textday2"
            android:textColor="#FF9E80"
            android:textStyle="normal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Day 2 Activities ">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textday2"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:id="@+id/textdaytext1"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:text="We will enjoy various activities on the site and enjoy many things."
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textdaytext1"
            android:textSize="20dp"
            android:id="@+id/textday3"
            android:textColor="#FF9E80"
            android:textStyle="normal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Day 3">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textday3"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:id="@+id/textdaytext2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:text="We will see what we can do."
            ></TextView>


    </RelativeLayout>
    </ScrollView>
</RelativeLayout>