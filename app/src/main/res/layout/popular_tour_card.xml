<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopularTours">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_tour"
        android:elevation="8dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="18dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:id="@+id/munnar"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="Munnar"></TextView>

            <ImageView
                android:id="@+id/imageCard1"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="280dp"
                android:layout_below="@id/munnar"
                android:src="@drawable/image1"/>
            <TextView
                android:id="@+id/places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tour"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/imageCard1"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:textColor="#000"></TextView>

            <TextView
                android:id="@+id/intrest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Places of Interest"
                android:layout_below="@+id/places"

                android:layout_marginLeft="7dp"
                android:textSize="25sp"
                android:textColor="#000"
                ></TextView>

            <TextView
                android:id="@+id/tour1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tour"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/intrest"
                android:textSize="14sp"
                android:textColor="#000"></TextView>
            <TextView
                android:id="@+id/tour2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tour"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tour1"
                android:textSize="14sp"
                android:textColor="#000"></TextView>
            <TextView
                android:id="@+id/tour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tour"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tour2"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>