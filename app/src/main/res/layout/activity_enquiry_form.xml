<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FF9E80"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enquiry "
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="25sp"></TextView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
           android:layout_marginTop="40dp"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_subject"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:hint="Enquiry Subject"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColorHint="@color/gray_color"
                android:padding="8dp"
                android:textColor="@color/gray_color"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:hint="Enter Name"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingRight="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:textColorHint="@color/gray_color"
                android:padding="8dp"
                android:textColor="@color/gray_color"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:hint="Enter Email"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/gray_color"
                android:padding="8dp"
                android:textColor="@color/gray_color"
                android:textSize="12sp" />



            <EditText
                android:id="@+id/et_country"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:hint="Enter Country "
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColorHint="@color/gray_color"
                android:layout_marginRight="10dp"

                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:textColor="@color/gray_color"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/et_numberAdults"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:hint="Enter Number of Adults"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:textColorHint="@color/gray_color"
                android:layout_marginRight="10dp"

                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:textColor="@color/gray_color"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/et_no_children"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:hint="Enter Number of Children"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:textColorHint="@color/gray_color"
                android:layout_marginRight="10dp"

                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:textColor="@color/gray_color"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_message"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:hint="Enter Your Message"
                android:layout_marginTop="10dp"
                android:textAlignment="viewStart"
                android:ems="5"
                android:inputType="text"
                android:textColorHint="@color/gray_color"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:textColor="@color/gray_color"
                android:textSize="12sp" />





            <Button
                android:id="@+id/btnEnquiry"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_rectangle_solid_gray"
                android:hint="Send"
                android:textSize="15sp"
                android:textColorHint="@color/gray_color">
            </Button>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>